# 게임 설정
GAME_NAME=텍스트 로그라이크 게임
GAME_VERSION=1.0.0

# 개발 환경
NODE_ENV=development
DEBUG=true

# API 설정 (향후 확장 시)
API_BASE_URL=https://api.example.com
API_TIMEOUT=5000

# 게임 데이터 경로
SCENARIO_DATA_PATH=./data/scenarios
DUMMY_DATA_PATH=./data/dummy

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/game.log

# 성능 모니터링 (선택사항)
ENABLE_PERFORMANCE_MONITORING=false
METRICS_ENDPOINT=

# 개발자 도구 (개발 환경에서만)
ENABLE_DEBUG_PANEL=true
ENABLE_SCENARIO_SKIP=false
ENABLE_CHEAT_MODE=false

# 테스트 설정
TEST_MODE=false
MOCK_DATA_ENABLED=false
